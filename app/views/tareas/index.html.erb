<% if usuario_signed_in? %>
<h1>Bienvenido <%= current_usuario.email %></h1>
<% end %>
<h1>Lista de tareas</h1>
<table class="table table-bordered table-hover">
	<thead class="thead-dark">
		<th>Titulo</th>
		<th>Editar</th>
		<th>Eliminar</th>
	</thead>
	<tbody>
	<% @tareas.each do |tarea|%>
		<tr> 
			<td><%=link_to "#{tarea.titulo}", tarea %></td>
			<td><%=link_to "editar", edit_tarea_path(tarea)%></td>
			<td><%=link_to "Eliminar", tarea,
			method: :delete, data: {confirm: "Estas seguro?"} %> </td>
			
		</tr>	
	<% end %>	
	</tbody>
</table>